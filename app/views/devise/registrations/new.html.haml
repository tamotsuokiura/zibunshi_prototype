- content_for :css do
  = stylesheet_link_tag 'organizations'
  
.header
  .header__Left
    = link_to root_path do
      =image_tag("logo.png", class: "logo")
  .header__Right

.sign-form
  %h1.sign-form__Title 新規登録フォーム
  .sign-form__Container
    = form_with model: @organization, url: organization_registration_path, id: 'new_organization', class: 'new_organization', local: true do |f|
      .sign-form__Container__Box
        = f.text_field :name, placeholder: "施設名", class: "text-form"
      .sign-form__Container__Box
        = f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "text-form"
      .sign-form__Container__Box
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class: "text-form"
      .sign-form__Container__Box
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード", class: "text-form"
      .sign-form__Container__Submit
        = f.submit "新規登録", class: "button-yellow"